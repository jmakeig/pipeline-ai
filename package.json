{
	"name": "pipeline-ai",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"db:seed": "psql $DATABASE_URL -f src/lib/server/seed.sql",
		"db:reset": "psql $DATABASE_URL -f src/lib/server/schema.sql && npm run db:seed"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "7.0.0",
		"@sveltejs/kit": "2.49.2",
		"@sveltejs/vite-plugin-svelte": "6.2.1",
		"svelte": "5.46.1",
		"svelte-check": "4.3.5",
		"typescript": "5.9.3",
		"vite": "7.3.0"
	},
	"dependencies": {
		"pg": "8.16.3"
	}
}
